<apex:page standardcontroller="Promise_to_Pay__c">

<style type="text/css">
    .col1 {width:200px; text-align:center;}
    .col2 {width:200px; text-align:center;}
    .col3 {width:800px; text-align:center;}        
</style>

<apex:form >
        <apex:pageBlock title="Edit Promise to Pay">
            <apex:pageMessages />
